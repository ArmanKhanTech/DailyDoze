    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DayFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fontFamily="sans-serif-condensed-medium">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Your Daily Doses : "
            android:paddingBottom="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed-medium"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:layout_marginRight="15dp"
             android:orientation="horizontal">

             <FrameLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_gravity="center"
                 android:elevation="3dp"
                 android:layout_marginLeft="15dp"
                 android:background="@drawable/berries_theme">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:elevation="3dp"
                     android:layout_gravity="center">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="Black"
                         android:textColor="@color/white"
                         android:textSize="25dp"
                         android:textStyle="bold"  />

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="Cumin"
                         android:textColor="@color/white"
                         android:textSize="25dp"
                         android:textStyle="bold" />

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="(¼ tsp)"
                         android:textColor="@color/white"
                         android:textSize="20dp"
                         android:textStyle="bold" />

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:elevation="3dp"
                     android:layout_marginBottom="10dp"
                     android:layout_gravity="bottom|center">

                     <ImageView
                         android:id="@+id/cuminInfo"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:src="@drawable/info_icon_white"/>

                     <ImageView
                         android:id="@+id/cuminCal"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:src="@drawable/calender_icon_white"/>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:elevation="3dp"
                     android:orientation="horizontal"
                     android:layout_marginTop="10dp"
                     android:layout_gravity="center_horizontal">

                     <CheckBox
                         android:id="@+id/cumin_cb1"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:theme="@style/WhiteCheckbox"
                         android:button="@drawable/white_checkbox"/>

                 </LinearLayout>

             </FrameLayout>

             <FrameLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_gravity="center"
                 android:elevation="3dp"
                 android:layout_marginLeft="20dp"
                 android:background="@drawable/beans_theme">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:elevation="3dp"
                     android:layout_gravity="center">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="Gralic"
                         android:textColor="@color/white"
                         android:textSize="25dp"
                         android:textStyle="bold"  />

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="Powder"
                         android:textColor="@color/white"
                         android:textSize="25dp"
                         android:textStyle="bold" />

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="(¼ tsp)"
                         android:textColor="@color/white"
                         android:textSize="20dp"
                         android:textStyle="bold" />

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:elevation="3dp"
                     android:layout_marginBottom="10dp"
                     android:layout_gravity="bottom|center">

                     <ImageView
                         android:id="@+id/garlicInfo"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:src="@drawable/info_icon_white"/>

                     <ImageView
                         android:id="@+id/garlicCal"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:src="@drawable/calender_icon_white"/>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:elevation="3dp"
                     android:orientation="horizontal"
                     android:layout_marginTop="10dp"
                     android:layout_gravity="center_horizontal">

                     <CheckBox
                         android:id="@+id/garlic_cb1"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:theme="@style/WhiteCheckbox"
                         android:button="@drawable/white_checkbox"/>

                 </LinearLayout>

             </FrameLayout>

             <FrameLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:layout_gravity="center"
                 android:elevation="3dp"
                 android:layout_marginLeft="20dp"
                 android:background="@drawable/nuts_theme">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:elevation="3dp"
                     android:layout_gravity="center">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="Ground"
                         android:textColor="@color/white"
                         android:textSize="25dp"
                         android:textStyle="bold"  />

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="Ginger"
                         android:textColor="@color/white"
                         android:textSize="25dp"
                         android:textStyle="bold" />

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="(1 tsp)"
                         android:textColor="@color/white"
                         android:textSize="20dp"
                         android:textStyle="bold" />

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:elevation="3dp"
                     android:layout_marginBottom="10dp"
                     android:layout_gravity="bottom|center">

                     <ImageView
                         android:id="@+id/gingerInfo"
                         android:layout_width="25dp"
                         android:layout_height="25dp"

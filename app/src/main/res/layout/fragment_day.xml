                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:theme="@style/WhiteCheckbox"
                        android:button="@drawable/white_checkbox"/>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/greens_theme">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:elevation="3dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Green"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Tea"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="(3 cups)"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="bottom|center">

                    <ImageView
                        android:id="@+id/greenInfo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/info_icon_white"/>

                    <ImageView
                        android:id="@+id/greenCal"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/calender_icon_white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/green_cb1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"

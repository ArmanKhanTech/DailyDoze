<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/expand_in</item>
        <item name="android:windowExitAnimation">@anim/expand_out</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="MCVTitleTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MCVWeekTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MCVDateTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>